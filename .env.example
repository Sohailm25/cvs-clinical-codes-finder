# ABOUTME: Example environment configuration for Clinical Codes Finder.
# ABOUTME: Copy to .env and fill in your values.

# Required: OpenAI API key for LLM-based classification and summarization
OPENAI_API_KEY=sk-your-key-here

# Required: Chainlit authentication secret (generate with: chainlit create-secret)
CHAINLIT_AUTH_SECRET=your-secret-here

# Optional: OpenAI model to use (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Optional: Agent settings
MAX_ITERATIONS=3
MAX_API_CALLS=12
CONFIDENCE_THRESHOLD=0.3

# Optional: API settings
API_TIMEOUT=5.0
MAX_RESULTS_PER_SYSTEM=10

# HTTP connection pooling
HTTP_MAX_CONNECTIONS=20
HTTP_MAX_KEEPALIVE=10

# API response caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Semantic reranking with cross-encoder
SEMANTIC_RERANK_ENABLED=false
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_WEIGHT_SEMANTIC=0.6
RERANKER_WEIGHT_LEXICAL=0.4

# LLM-driven query expansion
EXPANSION_ENABLED=true
EXPANSION_MODEL=gpt-4o-mini
EXPANSION_CACHE_TTL=86400

# Checkpointing for state persistence
CHECKPOINT_ENABLED=false
CHECKPOINT_BACKEND=memory
CHECKPOINT_SQLITE_PATH=.clinical_codes_checkpoints.db
